{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "es2020", "es2021", "esnext"],
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
